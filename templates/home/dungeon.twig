<div class='dungeon my-5'>
	
	<h2 class='center' >{{ position.relations.dungeon.name }}</h2>
	
	<div class='floors my-2'>

		{% set last = position.floor %}
		{% if position.foundStairs %}
			{% set last = last + 1 %}
		{% endif %}

		{% for floor in range(1, position.relations.dungeon.floors) %}

			{% if floor <= last %}

				{% set boss = floor == position.relations.dungeon.floors %}

				<div class='floor {% if floor == position.floor %}current{% endif %} {% if boss %}last{% endif %}'>
					<p class='center'>{% if boss %}<i class="fas fa-skull"></i>{% else %}{{ floor }}{% endif %}</p>
				</div>
			{% endif %}

		{% endfor %}

		{% if last < position.relations.dungeon.floors %}
			<div class='floor below'></div>
		{% endif %}

	</div>

	<div class='my-1'></div>
	<div class='options'>
		<div class='option' data-action='dungeon/leave'>Exit</div>
		<div class='option' data-action='dungeon/search'>Search</div>
		{% if position.foundStairs %}<div class='option' data-action='dungeon/down'>Down</div>{% endif %}
	</div>				

</div>