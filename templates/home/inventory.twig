<div class='popup' data-popup='.inventory-btn' >

	{% if character.itemIn('loot').count > 0 %}
		<div class='inventory loot'>
		<h2 class='center'>Loot</h2>
		{% for stack in character.itemIn('loot') %}

			<div class='slot' id='{{ stack.id }}'>
				<div>{{ icon('item/' ~ stack.item.name)|raw }}</div>
				<p>{{ stack.amount }}x</p>
				<p>{{ stack.item.name }}</p>
			</div>

		{% endfor %}
		</div>
	{% endif %}

	<div class='row h-4'></div>

	<div class='inventory'>
		{% for side in ['left', 'right'] %}

			{% set stack = character.itemIn(side ~ ' hand').first() %}
			{% if stack %}

			<div class='slot' id='{{ stack.id }}'>
				<div>{{ icon('item/' ~ stack.item.name)|raw }}</div>
				<p>{{ stack.amount }}x</p>
				<p>{{ stack.item.name }}</p>
			</div>

			{% endif %}

		{% endfor %}
	</div>

	<div class='inventory'>
		{% for stack in character.itemIn('inventory') %}

			<div class='slot' id='{{ stack.id }}'>
				<div>{{ icon('item/' ~ stack.item.name)|raw }}</div>
				<p>{{ stack.amount }}x</p>
				<p>{{ stack.item.name }}</p>
			</div>

		{% endfor %}
	</div>
	 
</div>